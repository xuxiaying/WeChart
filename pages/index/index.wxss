/**index.wxss**/
.container{
   height: 94%;
}
.main{
  height: 100%;
  font-size: 27rpx;
  overflow: hidden;
}
.banner {
  width: 100%;
  height: 400rpx;
  border-bottom:20rpx solid #f4f4f4;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.header{
  justify-content:space-around;
  display:flex;
  width:100%;
  height:80rpx;
  background:#C7154D;

}
.header-search{
  font-size:25rpx;
  padding:5rpx 15rpx;
  margin:10rpx;
  height:40rpx;
  width:500rpx;
  background:white;
  border-radius:20rpx;
  line-height:40rpx;
}
.heard-search-icon {
  height:21rpx;
  width:21rpx;
}
.categoryList{
  width: 100%;
  border-bottom:20rpx solid #f4f4f4; 
}
.category-info{
  display: inline-block;
  text-align: center;
  position: relative;
  margin-top: 20rpx;
  height: 150rpx;
  width: 25%;
}
.category-image{
  width: 95rpx;
  height: 95rpx;
}
.category-text{
  font-size: 25rpx;
  width: 100%;
  line-height: 30rpx
}
.goodsList{
  background:#f4f4f4;
  width:100%;
}
.goods-block{
  margin-bottom: 20rpx;
}
.goods-title{
  border-left: solid 8rpx #C7154D;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0 0 30rpx 20rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
  background:#f4f4f4;
}
.goods-list{
  width: 100%;
  color:#6A6A6A; 
}
.goods-item{
  display: inline-block;
  width: 47%;
  background: #fff;
}
.goods-item:nth-child(odd){  
  margin: 0.5rem 1% 0 2%;
}
.goods-item:nth-child(even){
  margin: 0.5rem 2% 0 1%;
}
.goods-image{
  width: 100%;
  height: 350rpx
}
